<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:DoubanFM">


	<Style TargetType="{x:Type local:HotKeySettingControl}">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:HotKeySettingControl}">
					<Grid Background="{TemplateBinding Background}">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto"/>
								<ColumnDefinition/>
								<ColumnDefinition Width="Auto"/>
							</Grid.ColumnDefinitions>
							<ContentPresenter/>
							<TextBox x:Name="PART_HotKeyText" Grid.Column="1" Margin="10,0" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
							<Button x:Name="PART_Clear" Grid.Column="2" Style="{DynamicResource ClearStyle}"/>
						</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="Padding" Value="2"/>
	</Style>
</ResourceDictionary>
